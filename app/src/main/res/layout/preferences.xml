 	<PreferenceCategory
 	    android:title="@string/downloading_puzzles">
 	    
 	    <CheckBoxPreference
 	        android:key="@string/download_puzzles"
 	        android:title="@string/download_puzzles_title" />
 	    
 	</PreferenceCategory>
